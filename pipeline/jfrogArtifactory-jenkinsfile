pipeline {
    agent any
    stages {
        stage('Deploy Docker Container') {
            steps {
                sh 'docker stop jfrog_artifactory || true'
                sh 'docker rm jfrog_artifactory || true'
                sh "docker run --name jfrog_artifactory -d -p 8081:8081 --restart always -v /home/vigneshsweekaran/volumes/jfrog/artifactory:/var/opt/jfrog/artifactory -e EXTRA_JAVA_OPTIONS='-Xms512m -Xmx1g -Xss256k -XX:+UseG1GC' docker.bintray.io/jfrog/artifactory-cpp-ce:latest"
            }
        }
    }
}
